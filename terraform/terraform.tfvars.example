# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "resume-snap"
environment  = "dev"

# Domain Configuration (optional - leave empty if not using custom domain)
domain_name = "example.com"

# GitHub Configuration for CI/CD
github_repo             = "your-username/your-repo"
github_branch           = "main"
github_token_secret_arn = "arn:aws:secretsmanager:us-east-1:123456789012:secret:github-token-xxxxx"

# Lambda Configuration
lambda_runtime = "nodejs18.x"

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"

# Feature Toggles
enable_waf                = true
enable_cloudwatch_alarms  = true
